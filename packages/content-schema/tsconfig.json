{
  "extends": "@total-typescript/tsconfig/bundler/no-dom",
  "compilerOptions": {
    "composite": false,
    "outDir": "build",
    "rootDir": ".",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
