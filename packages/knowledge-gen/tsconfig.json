{
  "extends": "@total-typescript/tsconfig/bundler/no-dom",
  "compilerOptions": {
    "composite": false,
    "verbatimModuleSyntax": false,
    "target": "ES2022",
    "lib": ["ES6", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "bundler",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*.ts"]
}
