{
  "extends": "@total-typescript/tsconfig/tsc/no-dom/library-monorepo",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "target": "ES2022",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@env": ["./env.ts"],
      "@/*": ["./src/*"]
    }
  }
}
