{
  "name": "@kurasu-manta/knowledge-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --noEmit",
    "gen:jp-1": "dotenvx run -f .env -- tsx src/workflows/minna-jp-1 | pino-pretty",
    "debug-gen:jp-1": "dotenvx run -f .env -- tsx --inspect-brk src/workflows/minna-jp-1 | pino-pretty",
    "db:push": "dotenvx run -f .env -- drizzle-kit push",
    "db:generate": "dotenvx run -f .env -- drizzle-kit generate",
    "test": "dotenvx run -f .env -- tsx --test '**/*.test.ts'"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/openai": "^1.3.23",
    "@dotenvx/dotenvx": "^1.39.0",
    "@google-cloud/text-to-speech": "^6.0.1",
    "@kurasu-manta/api-schema": "workspace:^",
    "@kurasu-manta/knowledge-schema": "workspace:^",
    "ai": "^4.3.6",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.41.0",
    "kuromojin": "^3.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.12.0",
    "pino": "^9.6.0",
    "random": "^5.4.1",
    "shelljs": "^0.9.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/shelljs": "^0.8.15",
    "drizzle-kit": "^0.30.6",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
